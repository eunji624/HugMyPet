<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/default.css" />
    <link rel="stylesheet" type="text/css" href="/css/header.css" />
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
    <link rel="stylesheet" type="text/css" href="/css/signup.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script type="module" src="/js/signup.js" defer></script>
    <title>Sparta Folio - Sign Up</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="sign-up-container">
      <div id="gif-box">
        <img src="/images/catKey.gif" loop=infinite> </img>
      </div>
      <form id="signup-form">
        <label>
          <h1>World! </h1>
          <h2>" init " your code!</h2>
        </label>
        <div class="email-wrap">
          <label class="input-wrap email">
            <div>
              <span>* Email</span>
              <input type="text" class="email-input" />
            </div>
            <button id="email-auth-btn" class="btn btn-outline-secondary" type="button">인증</button>
          </label>
          
        </div>
        <div class="email-check-wrap disabled">
          <label class="input-wrap email-check">
            <div>
              <span>* Email Auth Number</span>
              <input type="text" class="email-check-input" placeholder="인증번호 4자리를 입력해주세요."/>
            </div>
            <button id="email-check-btn" class="btn btn-outline-secondary" type="button">확인</button>
          </label>
          <span class="check-message">

          </span>
        </div>
        
        <label class="input-wrap">
          <span>* Name</span>
          <input type="text" class="name-input" />
        </label>
        <label class="input-wrap">
          <span>* Password</span>
          <input type="password" class="password-input" />
        </label>
        <div class="password-check-wrap disabled">
          <label class="input-wrap">
            <span>* Password Check</span>
            <input type="password" class="password-check-input" />
          </label>
          <span class="check-message">
          
          </span>
        </div>
        <div class="row">
          <div class="col text-center" id="button_margin">
            <button
              type="submit"
              class="btn btn-outline-secondary"
              style="width: 60%; height: 40px"
            >
              Sign up
            </button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
