<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<title>안아줘</title>
		<link rel="stylesheet" type="text/css" href="../../assets/css/default.css" />
		<link rel="stylesheet" type="text/css" href="../../assets/css/index.css" />
		<link rel="stylesheet" type="text/css" href="../../assets/css/header.css" />
		<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
		<script type="module" src="../../assets/js/index.js" defer></script>
		<script type="module" src="../../assets/js/user-sign-in.js" defer></script>
		<script type="module" src="../../assets/js/header.js" defer></script>
		<script type="module" src="../../assets/js/sign-out.js" defer></script>
		<script type="module" src="../../assets/js/logout.js" defer></script>
	</head>

	<body>
		<header class="header"><%- include('header.ejs') %></header>
		<main>
			<!-- 메인 보드 -->
			<section id="main-title">
				<div class="back"></div>
				<div class="content">
					<div class="title"></div>
					<div class="over-view"></div>
					<div class="petsitter-btn">
						<a href="/petsitter-sign-in">
							<button class="petsitter-sign-in">펫시터 로그인</button>
						</a>
						<div class="petsitter-signup">
							<a href="/petsitter-sign-up">
								<button id="petsitter-signup-btn">펫시터 가입하기</button>
							</a>
							<a href="/petsitter-my-profile">
								<button class="petsitter-my-profile-btn">펫시터 정보 조회</button>
							</a>
						</div>
						<button type="button" class="petsitter-sign-out-btn">펫시터 탈퇴</button>
					</div>
				</div>
			</section>

			<!-- 정렬 및 검색창 -->
			<section id="main-content">
				<nav>
					<ul>
						<li data-sort="like">평점 순</li>
						<li data-sort="view">조회순</li>
					</ul>
					<input type="text" placeholder="키워드로 검색해주세요." class="search-input" />
				</nav>

				<!-- 펫시터 카드 -->
				<ul class="content" id="petsitter-cards-list"></ul>
			</section>
		</main>
	</body>
</html>
